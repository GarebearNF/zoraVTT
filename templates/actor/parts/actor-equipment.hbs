<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
	<div class='item-formula'>{{localize "LABELS.Item.Roll"}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create item'
        data-type='equipment'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='item'}}
      </a>
    </div>
  </li>
  {{#each equipment as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4 class="rollable tooltip" data-roll-type='item' data-roll="1d8+{{item.system.rollmod}}">{{item.name}}<div class="tooltiptext">{{item.system.description.plaintext}}<br><br><hr><div class="grid grid-2col tooltip-subtext">
			<div class="grid-span-1">
				<div class="">
					<label for="item.system.type" class=""><b>{{localize "ZORA.Item.TypeLabel"}}:</b> {{item.system.type}}</label>
				</div>
			</div>
		</div></div></h4>
      </div>
	  <div class='item-formula item-prop'>1d8+{{item.system.rollmod}}</div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Edit" type='item'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='item'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>