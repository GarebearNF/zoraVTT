<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
	<div class='item-formula'>{{localize 'Level'}}</div>
    <div class='item-formula'>{{localize 'Roll Formula'}}</div>
    <div class='item-controls'  style="visibility: hidden;">
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='Ability'}}'
        data-type='ability'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='Ability'}}
      </a>
    </div>
  </li>
  {{#each abilities as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-action="use" data-roll-type='item' data-roll="{{item.system.formula}}">
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <div class="tooltip"><h4 class="rollable tooltip" data-roll-type='item' data-roll="{{item.system.formula}}">{{item.name}}<div class="tooltiptext">{{item.system.description.plaintext}}<br><br><hr><div class="grid grid-2col tooltip-subtext">
			<div class="grid-span-1">
				<div class="">
					<label for="system.level" class=""><b>{{localize "LABELS.Item.Level"}}:</b> {{system.level}}</label>
				</div>
			</div>
			<div class="grid-span-1">
				<div class="">
					<label for="system.path" class=""><b>{{localize "LABELS.Item.Path"}}:</b> {{system.path}}</label>
				</div>
			</div>
			</div></div></h4></div>
      </div>
	  <div class='item-formula item-prop'>{{item.system.level}}</div>
      <div class='item-formula item-prop'>{{item.system.formula}}</div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='Ability'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='Ability'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>